<%= javascript_include_tag :defaults%>
<div class="instructions"><span style="float: left;">Please read through the entire thread before starting the annotation.</span><span style="float: right;"><%= link_to 'Instructions', {:action => 'pop_inst'}, :popup=>'true'%></span>&nbsp;</div>
<h1 id="title">Subject: <%=@email_thread.Name%></h1>
<%= render :partial => 'email', :collection => @emails%>
<% form_tag({:action => 'show', :control => 'sum'}) do %>
  <%= submit_tag 'Go to Summarization' %>
<% end %>