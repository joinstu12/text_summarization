<html>
<head>
  <title>Email Study</title>
  <%= stylesheet_link_tag 'scaffold' %>
	<%= javascript_include_tag :defaults %>
</head>
<body>
<table class="menu">
<tr class="menu">
<td class="menu"><%= link_to_unless_current :Emails, {:controller => 'email', :action => 'list'}, :class => "menu"%></td>
<td class="menu"><%= link_to_unless_current :Threads, {:controller => 'thread', :action => 'list'}, :class => "menu"%></td>
<td class="menu"><%= link_to_unless_current :Experiments, {:controller => 'study', :action => 'list'}, :class => "menu"%></td>
<td class="menu"><%= link_to_unless_current :Participants, {:controller => 'participant', :action => 'list'}, :class => "menu"%></td>
<td class="menu"><%= link_to_unless_current "Add Admin", {:controller => 'account', :action => 'signup'}, :class => "menu"%></td>
<td class="menu"><%= link_to_unless_current "Log Out", { :controller => 'account', :action => 'logout'}, :class => "menu"%></td>
</tr>
</table>
<p style="color: green"><%= flash[:notice] %></p>
<p style="color: red"><%= flash[:error] %></p>

<%= yield  %>
<% if (ENV['RAILS_ENV'] == 'development') %>
    <div id="debug" style="margin: 40px 5px 5px 5px;">
        <a href="#" onclick="Element.toggle('debug_info');return false" style="text-decoration: none; color: #ccc;">Show Debug Info &#10162;</a>
        <div id="debug_info" style="display: none;">
            <%= debug session %>
            <%= debug params %>
        </div>
    </div>
<% end %>
</body>
</html>
